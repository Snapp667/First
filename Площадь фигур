K = input()
if K == 'треугольник':
    a = int(input())
    b = int(input())
    c = int(input())
    p = (a + b + c) / 2
    S = (p * (p - a) * (p - b) * (p - c)) ** 0.5
elif K == 'прямоугольник':
    a = int(input())
    b = int(input())
    S = a * b
elif K == 'круг':
    r = int(input())
    S = 3.14 * r ** 2
    
print(S)
